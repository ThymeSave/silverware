{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>ThymeSave/.github:renovate-config"
  ],
  "packageRules": [
        {
            "matchPackagePatterns":[
                "eslint",
                "@typescript-eslint/",
                "@angular-eslint/"
            ],
            "groupName": "eslint"
        },
        {
          "matchPackagePatterns":[
              "@angular/",
              "@angular-devkit/"
          ],
          "groupName": "angular"
      },
      {
        "matchPackagePatterns":[
            "jasmine-node",
            "jasmine",
            "@types/jasmine"
        ],
        "groupName": "jasmine"
      },
      {
        "matchPackagePatterns":[
            "node",
            "ts-node",
            "@types/node"
        ],
        "groupName": "node.js"
      },
      {
        "matchPackagePatterns":[
            "karma",
            "karma-chrome-launcher",
            "karma-coverage",
            "karma-jasmine",
            "karma-jasmine-html-reporter"
        ],
        "groupName": "karma"
      }
  ]
}
