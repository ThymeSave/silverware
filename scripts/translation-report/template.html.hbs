<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"/>
  <title>Translation Report</title>
  <style>
    body {
      font-family: Arial, serif;
    }

    h1, h2 {
      text-align: center;
    }

    table, progress {
      width: 100%;
    }

    table, tr, td, th {
      border: 1px solid black;
      border-collapse: collapse;
    }
  </style>

</head>
<body>
<h1>Translation Report</h1>
<h2>Coverage</h2>
<table>
  <thead>
  <th>Language</th>
  <th>Coverage</th>
  </thead>
  <tbody>
  {{#each coverage }}
    <tr>
      <td>{{@key}}</td>
      <td>
        <progress title="{{this}}/{{../ingredientCount}}" max="{{../ingredientCount}}" value="{{this}}"></progress>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
<h2>Status</h2>
<table>
  <thead>
  <tr>
    <th>Key</th>
    {{#each languages}}
      <th>{{this}}</th>
    {{/each}}
  </tr>
  </thead>
  <tbody>
  {{#each ingredientTranslations as | ingredientTranslation |}}
    <tr>
      <td>{{@key}}</td>
      {{#each ../languages as | language |}}
        <td>{{# if (lookup ingredientTranslation language)}}✅{{else}}❌{{/if}}</td>
      {{/each}}
    </tr>
  {{/each }}
  </tbody>
</table>
</body>
</html>
