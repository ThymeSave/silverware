{
  "ignorePatterns": [],
  "overrides": [
    {
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:import/errors"
      ],
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "createDefaultProgram": true,
        "project": [
          "tsconfig.json"
        ]
      },
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "app",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "app",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "comma-dangle": [
          "error",
          "always-multiline"
        ],
        "import/newline-after-import": [
          "error",
          {
            "count": 1
          }
        ],
        "import/no-unresolved": "off",
        "import/order": [
          "error",
          {
            "alphabetize": {
              "caseInsensitive": true,
              "order": "asc"
            },
            "groups": [
              "builtin",
              "external",
              "internal",
              "parent",
              "sibling",
              "index",
              "object",
              "type"
            ],
            "newlines-between": "always",
            "pathGroups": [
              {
                "group": "external",
                "pattern": "@thymesave/**",
                "position": "after"
              },
              {
                "group": "internal",
                "pattern": "@models/**"
              },
              {
                "group": "internal",
                "pattern": "@plugins/**"
              },
              {
                "group": "internal",
                "pattern": "./**"
              },
              {
                "group": "internal",
                "pattern": "../*"
              },
              {
                "group": "internal",
                "pattern": "@/**"
              },
              {
                "group": "external",
                "pattern": "rxjs"
              }
            ]
          }
        ],
        "no-multiple-empty-lines": [
          "error",
          {
            "max": 1
          }
        ],
        "semi": [
          "error",
          "always"
        ]
      }
    },
    {
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "files": [
        "*.html"
      ],
      "rules": {}
    }
  ],
  "root": true
}
